<form class="settings-form" method="post" action="/settings" autocomplete="off">
  <ul class="nav nav-tabs">
    <li data-tab="settings" class="active"><a id="<%- idPrefix %>-tab-settings" href="#<%- idPrefix %>-settings" data-toggle="tab"><%- t('settings', 'form:settings') %></a></li>
    <li data-tab="hotkeys"><a id="<%- idPrefix %>-tab-hotkeys" href="#<%- idPrefix %>-hotkeys" data-toggle="tab"><%- t('settings', 'form:hotkeys') %></a></li>
    <li data-tab="license"><a id="<%- idPrefix %>-tab-license" href="#<%- idPrefix %>-license" data-toggle="tab"><%- t('settings', 'form:license') %></a></li>
  </ul>
  <div class="panel panel-default tab-content">
    <div id="<%- idPrefix %>-settings" class="panel-body tab-pane active">
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-title" class="control-label"><%- t('settings', 'setting:title') %></label>
          <input id="<%- idPrefix %>-title" class="form-control" name="title" type="text" maxlength="20">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-password1" class="control-label"><%- t('settings', 'setting:password1') %></label>
          <input id="<%- idPrefix %>-password1" class="form-control" name="password1" type="password">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-password2" class="control-label"><%- t('settings', 'setting:password2') %></label>
          <input id="<%- idPrefix %>-password2" class="form-control" name="password2" type="password">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-readTimeout" class="control-label"><%- t('settings', 'setting:readTimeout') %></label>
          <input id="<%- idPrefix %>-readTimeout" class="form-control" name="readTimeout" type="number" min="100" max="60000">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-imWorkin" class="control-label"><%- t('settings', 'setting:imWorkin') %></label>
          <div>
            <label class="radio-inline">
              <input id="<%- idPrefix %>-orders" name="imWorkin" type="radio" value="1" required> <%- t('settings', 'setting:imWorkin:on') %>
            </label>
            <label class="radio-inline">
              <input name="imWorkin" type="radio" value="0" required> <%- t('settings', 'setting:imWorkin:off') %>
            </label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-orderPath" class="control-label"><%- t('settings', 'setting:orderPath') %></label>
          <input id="<%- idPrefix %>-orderPath" class="form-control" name="orderPath" type="text" required>
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-driverPath" class="control-label"><%- t('settings', 'setting:driverPath') %></label>
          <input id="<%- idPrefix %>-driverPath" class="form-control" name="driverPath" type="text" required>
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-gprsPath" class="control-label"><%- t('settings', 'setting:gprsPath') %></label>
          <input id="<%- idPrefix %>-gprsPath" class="form-control" name="gprsPath" type="text" required>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-verificationTimeout" class="control-label"><%- t('settings', 'setting:verificationTimeout') %></label>
          <input id="<%- idPrefix %>-verificationTimeout" class="form-control" name="verificationTimeout" type="number" min="1000" max="300000">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-verification" class="control-label"><%- t('settings', 'setting:verification') %></label>
          <div>
            <label class="radio-inline">
              <input id="<%- idPrefix %>-verification" name="verification" type="radio" value="1" required> <%- t('settings', 'setting:verification:on') %>
            </label>
            <label class="radio-inline">
              <input name="verification" type="radio" value="0" required> <%- t('settings', 'setting:verification:off') %>
            </label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-verificationInputPath" class="control-label"><%- t('settings', 'setting:verificationInputPath') %></label>
          <input id="<%- idPrefix %>-verificationInputPath" class="form-control" name="verificationInputPath" type="text" required>
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-verificationSuccessPath" class="control-label"><%- t('settings', 'setting:verificationSuccessPath') %></label>
          <input id="<%- idPrefix %>-verificationSuccessPath" class="form-control" name="verificationSuccessPath" type="text" required>
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-verificationErrorPath" class="control-label"><%- t('settings', 'setting:verificationErrorPath') %></label>
          <input id="<%- idPrefix %>-verificationErrorPath" class="form-control" name="verificationErrorPath" type="text" required>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-8">
          <label for="<%- idPrefix %>-programmerFile" class="control-label"><%- t('settings', 'setting:programmerFile') %></label>
          <input id="<%- idPrefix %>-programmerFile" class="form-control" name="programmerFile" type="text" required>
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-daliPort" class="control-label"><%- t('settings', 'setting:daliPort') %></label>
          <input id="<%- idPrefix %>-daliPort" class="form-control" name="daliPort" type="number" min="0" max="256">
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-inputTemplatePath" class="control-label"><%- t('settings', 'setting:inputTemplatePath') %></label>
        <input id="<%- idPrefix %>-inputTemplatePath" class="form-control" name="inputTemplatePath" type="text" required>
      </div>
    </div>
    <div id="<%- idPrefix %>-hotkeys" class="panel-body tab-pane settings-hotkeys">
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-showDashboardPage" class="control-label"><%- t('settings', 'hotkey:showDashboardPage') %></label>
          <input id="<%- idPrefix %>-showDashboardPage" class="form-control" name="hotkeys.showDashboardPage" type="text" pattern="<%- hotkeyPattern %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-showHistoryPage" class="control-label"><%- t('settings', 'hotkey:showHistoryPage') %></label>
          <input id="<%- idPrefix %>-showHistoryPage" class="form-control" name="hotkeys.showHistoryPage" type="text" pattern="<%- hotkeyPattern %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-showSettingsPage" class="control-label"><%- t('settings', 'hotkey:showSettingsPage') %></label>
          <input id="<%- idPrefix %>-showSettingsPage" class="form-control" name="hotkeys.showSettingsPage" type="text" pattern="<%- hotkeyPattern %>">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-focusServiceTag" class="control-label"><%- t('settings', 'hotkey:focusServiceTag') %></label>
          <input id="<%- idPrefix %>-focusServiceTag" class="form-control" name="hotkeys.focusServiceTag" type="text" pattern="<%- hotkeyPattern %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-focusDriver" class="control-label"><%- t('settings', 'hotkey:focusDriver') %></label>
          <input id="<%- idPrefix %>-focusDriver" class="form-control" name="hotkeys.focusDriver" type="text" pattern="<%- hotkeyPattern %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-focusGprs" class="control-label"><%- t('settings', 'hotkey:focusGprs') %></label>
          <input id="<%- idPrefix %>-focusGprs" class="form-control" name="hotkeys.focusGprs" type="text" pattern="<%- hotkeyPattern %>">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-focusLed" class="control-label"><%- t('settings', 'hotkey:focusLed') %></label>
          <input id="<%- idPrefix %>-focusLed" class="form-control" name="hotkeys.focusLed" type="text" pattern="<%- hotkeyPattern %>">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-toggleMode" class="control-label"><%- t('settings', 'hotkey:toggleMode') %></label>
          <input id="<%- idPrefix %>-toggleMode" class="form-control" name="hotkeys.toggleMode" type="text" pattern="<%- hotkeyPattern %>">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-program" class="control-label"><%- t('settings', 'hotkey:program') %></label>
          <input id="<%- idPrefix %>-program" class="form-control" name="hotkeys.program" type="text" pattern="<%- hotkeyPattern %>">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-cancel" class="control-label"><%- t('settings', 'hotkey:cancel') %></label>
          <input id="<%- idPrefix %>-cancel" class="form-control" name="hotkeys.cancel" type="text" pattern="<%- hotkeyPattern %>">
        </div>
      </div>
    </div>
    <div id="<%- idPrefix %>-license" class="panel-body tab-pane">
      <div class="form-group">
        <label for="<%- idPrefix %>-id" class="control-label"><%- t('settings', 'setting:id') %></label>
        <input id="<%- idPrefix %>-id" class="form-control" name="id" type="text" required pattern="^[a-zA-Z0-9-_]+$">
      </div>
      <div class="row">
        <div class="form-group col-md-8">
          <label for="<%- idPrefix %>-remoteServer" class="control-label"><%- t('settings', 'setting:remoteServer') %></label>
          <input id="<%- idPrefix %>-remoteServer" class="form-control" name="remoteServer" type="url">
        </div>
        <div class="form-group col-md-4">
          <label for="<%- idPrefix %>-syncInterval" class="control-label"><%- t('settings', 'setting:syncInterval') %></label>
          <input id="<%- idPrefix %>-syncInterval" class="form-control" name="syncInterval" type="number" min="10" max="480" step="1">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-8">
          <label for="<%- idPrefix %>-licenseKey" class="control-label"><%- t('settings', 'setting:licenseKey') %></label>
          <textarea id="<%- idPrefix %>-licenseKey" class="form-control" name="licenseKey" rows="8"></textarea>
        </div>
        <div class="col-md-4">
          <div class="row">
            <div class="form-group col-md-4">
              <label for="<%- idPrefix %>-licenseInfo-appId" class="control-label"><%- t('settings', 'setting:licenseInfo:appId') %></label>
              <input id="<%- idPrefix %>-licenseInfo-appId" class="form-control" name="licenseInfo.appId" type="text" readonly>
            </div>
            <div class="form-group col-md-4">
              <label for="<%- idPrefix %>-licenseInfo-appVersion" class="control-label"><%- t('settings', 'setting:licenseInfo:appVersion') %></label>
              <input id="<%- idPrefix %>-licenseInfo-appVersion" class="form-control" name="licenseInfo.appVersion" type="text" readonly>
            </div>
            <div class="form-group col-md-4">
              <label for="<%- idPrefix %>-licenseInfo-date" class="control-label"><%- t('settings', 'setting:licenseInfo:date') %></label>
              <input id="<%- idPrefix %>-licenseInfo-date" class="form-control" name="licenseInfo.date" type="text" readonly>
            </div>
          </div>
          <div class="form-group">
            <label for="<%- idPrefix %>-licenseInfo-licensee" class="control-label"><%- t('settings', 'setting:licenseInfo:licensee') %></label>
            <input id="<%- idPrefix %>-licenseInfo-licensee" class="form-control" name="licenseInfo.licensee" type="text" readonly>
          </div>
          <div class="form-group">
            <label for="<%- idPrefix %>-licenseInfo-uuid" class="control-label"><%- t('settings', 'setting:licenseInfo:uuid') %></label>
            <input id="<%- idPrefix %>-licenseInfo-uuid" class="form-control" name="licenseInfo.uuid" type="text" readonly>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-licenseError" class="control-label"><%- t('settings', 'setting:licenseError') %></label>
        <input id="<%- idPrefix %>-licenseError" class="form-control" name="licenseError" type="text" disabled>
      </div>
    </div>
    <div class="panel-footer">
      <input id="<%- idPrefix %>-password" class="form-control" name="password" type="password" required placeholder="<%- t('settings', 'form:password') %>"><input
        type="submit" class="btn btn-primary settings-save" value="<%- t('settings', 'form:submit') %>"><input
        type="button" class="btn btn-default settings-export" value="<%- t('settings', 'form:export') %>"><input
        type="button" class="btn btn-danger settings-restart" value="<%- t('settings', 'form:restart') %>">
    </div>
  </div>
</form>
